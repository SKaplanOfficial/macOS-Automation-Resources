{
  "id": "https://skaplan.io/schemas/v1/Application.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Application",
  "description": "A software application.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "bundleId": {
      "type": "string",
      "pattern": "^([a-zA-Z]+)\\.([a-zA-Z0-9-]+\\.)*([a-zA-Z0-9-]+)$"
    },
    "description": {
      "type": "string"
    },
    "creators": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "versions": {
      "description": "Version history of the application.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "$ref": "./SoftwareVersion.schema.json"
      }
    },
    "icon": {
      "description": "The location of an icon representing the application. This can be a URL to an image file, a data URI, or a file path.",
      "type": "string",
      "format": "uri-reference"
    },
    "links": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "$ref": "./URL.schema.json"
      }
    },
    "primaryCategorization": {
      "description": "The primary category, subcategory, and topic of the application. The application may fit into multiple categories; select the one that best matches how users would search for it. Additional categories can be specified in the `secondaryCategorization` field.",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "category": {
              "const": "Developer Tools"
            },
            "subcategory": {
              "$ref": "./softwareCategories/DeveloperTools.schema.json"
            }
          }
        },
        {
          "properties": {
            "category": {
              "const": "Lifestyle"
            },
            "subcategory": {
              "$ref": "./softwareCategories/Lifestyle.schema.json"
            }
          }
        },
        {
          "properties": {
            "category": {
              "const": "Sports"
            }
          }
        }
      ]
    },
    "secondaryCategorization": {
      "description": "Additional categories, subcategories, and topics that the application fits into.",
      "type": "array",
      "items": {
        "$ref": "./softwareCategories/SoftwareCategorization.schema.json"
      }
    },
    "keywords": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "description": "Metadata about the application.",
      "type": "object",
      "$ref": "./RecordMetadata.schema.json"
    }
  },
  "required": [
    "name",
    "description",
    "links"
  ]
}