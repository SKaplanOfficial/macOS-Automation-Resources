{
  "id": "https://skaplan.io/schemas/v1/ForumPost.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Forum Post",
  "description": "A post on a forum",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "title": {
          "description": "The title of the post.",
          "type": "string"
        },
        "author": {
          "description": "The author of the post.",
          "oneOf": [
            {
              "$ref": "./Contributor.schema.json"
            },
            {
              "type": "string"
            }
          ]
        },
        "date": {
          "description": "The date the post was created.",
          "type": "string",
          "format": "date-time"
        },
        "summary": {
          "description": "A brief summary of the post.",
          "type": "string"
        },
        "language": {
          "description": "The language the post is written in.",
          "type": "string"
        },
        "additionalLinks": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "$ref": "./URL.schema.json"
          }
        },
        "keywords": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "description": "Metadata about the forum post record.",
          "type": "object",
          "$ref": "./RecordMetadata.schema.json"
        }
      }
    },
    {
      "$ref": "./proto/URLWrapper.schema.json"
    }
  ],
  "required": [
    "title",
    "language"
  ]
}